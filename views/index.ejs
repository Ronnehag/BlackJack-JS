<html>
    <head>
    <link href="css/bootstrap.min.css" rel="stylesheet">
    <link href="css/styles.css" rel="stylesheet">
    </head>

<body>
<div class="wrapper">
  <div class="container text-center" id="loginForm">	
    <header class="header">
      <h1>Welcome to Black Jack</h1>
      <h4 class="m-bot">Sign in with your credentials to start a session.</h4>
    </header>
	<div class="row">
		<div class="col-sm-4 mx-auto">
      <form name="loginForm" action="/game" method="post" id="formLogin">
        <div class="form-group">
          <label for="username">Username</label>
          <input type="text" class="form-control" name="username" id="username" placeholder="Enter username"/>
        </div>
        <div class="form-group">
          <label for="exampleInputPassword1">Password</label>
          <input type="password" class="form-control" name="password" id="password" placeholder="Password"/>
        </div>
        <div class="form-check">
          <button type="submit" class="btn btn-primary">Log in</button>
        </div>
      </form>
		</div>
	</div>
  <h4 id="invalid" class="mt-sm"></h4>
</div>
</div>

<script src="js/bootstrap.min.js"></script>
<script src="js/jquery-3.3.1.min.js"></script>
<script src="js/login.js"></script>

</body>
</html>